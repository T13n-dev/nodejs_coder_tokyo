extends ../layouts/main

block content

    h1 Create user 

    if errors 
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="POST", enctype="multipart/form-data" )
        .form-group
            label(for="name") Name
            input#name.form-control( name="name" type="text" value=values? values.name : '' )
        
        .form-group
            label(for="phone") Phone
            input#phone.form-control( name="phone" type="text" value=values? values.phone : '' )

        .form-group 
            label(for="upload") Select image to upload:  
            br
            input#upload( name="upload" type="file" )

        button.btn.btn-primary Create