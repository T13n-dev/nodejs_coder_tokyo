extends ../layouts/main
block content
    h1 Products
        a.btn.btn-primary.ml-2( href="/products/create" ) New

    .d-flex.align-items-center
        form.ml-auto( action="/products/search", method="GET", class="d-flex" )
            input(type=text, name="q", class="form-control" )
            button(class="btn btn-primary ml-2") Search

    .row.text-center
        each product in products
            .col-lg-3.col-md-6.mb-4
                .card.h-100
                    img.card-img-top(src='http://placehold.it/500x325', alt='')
                    .card-body
                    h4.card-title= product.name
                    p.card-text= product.description
                    a.btn.btn-primary(href='#') View

        
            